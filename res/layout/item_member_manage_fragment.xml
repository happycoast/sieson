<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/finacial_info_padding"
    android:paddingTop="@dimen/finacial_info_padding" >

    <ImageView
        android:id="@+id/member_manage_item_photo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"
        android:src="@drawable/user_ico"
        android:text="照片" />

    <TextView
        android:id="@+id/member_manage_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="时为应" />

    <TextView
        android:id="@+id/member_manage_item_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:text="17702707750" />

    <TextView
        android:id="@+id/member_manage_item_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="3000元会籍" />

    <TextView
        android:id="@+id/member_manage_item_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="center_vertical"
        android:text="已审核/已通过人脸验证" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/member_manage_item_oprate_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_black"
                android:padding="5dp"
                android:text="升级" />

            <TextView
                android:id="@+id/member_manage_item_oprate_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_black"
                android:padding="5dp"
                android:text="人脸验证" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>